		<div class="col-md-6">
            <h4>Line Up</h4>
                  @Html.DisplayFor(model => model.Event.Band)
		</div>
		<div class="col-md-6">
            <h4>Venue Information</h4>
                @Html.DisplayFor(model => model.Event.Venue)
		</div>
	</div>
</div>



