@page
@model ChipmunkEventListing.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserCreated)
        </dd>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Events)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Event Title</th>
                    <th>Attendance</th>
                </tr>
                @foreach (var item in Model.User.Events)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Attendances)
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.User.UserID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
