<!DOCTYPE html>
<html lang="en">
<html colorcharset="utf-8" />
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ChipmunkEventListing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>


<div class="container headerbg container-boarder">
<div class="container-fluid" style="padding-left: 0px;">
	<div class="row">
		<div class="col-md-12">
			<div class="row" style="padding-left: 30px;">
				<div class="col-md-12 sitetitle" >
					<h1>
						<u>Chipmunk Event Listings</u>
					</h1>
				</div>
			</div>
			<nav class="navbar navbar-expand-lg navbar-light">
				 
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
					<span class="navbar-toggler-icon"></span>
				</button> 
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="navbar-nav">
						<li class="nav-item" style="padding-left:1em">
                            <a class="btn btn-primary" asp-area="" asp-page="/Events/Index"> Events</a>
                        </li>
						<li class="nav-item" style="padding-left:1em">
                            <a class="btn btn-primary" asp-area="" asp-page="/Events/Create"> Add Event</a>
                        </li>
                        <li class="nav-item" style="padding-left:1em">
                            <a class="btn btn-primary" asp-area="" asp-page="/Upload"> Upload a File</a>
                        </li>
						 <li class="nav-item" style="padding-left:1em">
                            <a class="btn btn-primary" asp-area="" asp-page="/Users/Index"> Users</a>
                        </li>

					</ul>
					
					<ul class="navbar-nav ml-md-auto">
						<li class="nav-item active">
						   <partial name="_LoginPartial">
						</li>
						<li> <img src="/img/blank_profile.png" class="img" style="max-width:50px ; height:auto"  alt="blank_profile" />
						</li>
					</ul>
				</div>
			</nav>
		</div>
	</div>
</div>
</div>


    <div class="container headerbg containerpaddingtop">
        <main role="main" class="pb-3 backgroundcolour">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Chipmunk Event Listing - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
